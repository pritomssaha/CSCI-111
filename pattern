#include <iostream>
using namespace std;
int main() {
	int input;
	cout << "Enter the number: ";
	cin >> input;


	for (int row = 1; row <= (2 * input - 1); row++){

		if (row % 2 != 0){

			for (int j = 1; j <= (2 * input - 1); j++){
				if (j % 2 != 0) { cout << "*"; }
				else cout << "_";
			}
		}

		else if (row % 2 == 0){
			for (int k = 1; k <= input; k++){
				cout << "_ ";
			}
      cout<<endl;

		}
		cout << endl;
	
	}
}
