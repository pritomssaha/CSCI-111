#include <iostream>
#include<cstdlib>
#include<ctime>
#include<cmath>
using namespace std;
int main() {
  int input;
  do{
  cout<<"Enter a number: ";
  cin>>input;
  if(input<0){
    cout<<"The number is negative.";
     //return 0;
  }
  else 
   cout<<"The square root of "<<input<<" is "<<int(sqrt(input)+0.5)<<endl;
  }while(input>0);
   
  return 0;

}
