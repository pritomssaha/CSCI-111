#include <iostream>
using namespace std;
int main() {
  int row=0, i=1 ,j=1;
  cout<<"Enter number of rows: ";
  cin>>row;
  while(i<=row){
   while(j<=2*row-1){
     if(j>=row+1-i && j<=row-1+i){
     cout<<"*";
     }
     else 
     cout<<" ";
     j++;
   }
    cout<<endl;
    i++;
    j=1;
  }
  return 0;
}
